#header
	.container
		nav(class='navbar navbar-expand-lg navbar-dark bg-dark rounded-bottom')
			a(class='navbar-brand', href='/')
				img(src='/images/banner.png', style='height: auto; width: 100px')
			button(class='navbar-toggler', type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			div(class='collapse navbar-collapse', id='navbarSupportedContent')
				ul(class='navbar-nav mr-auto')
					li.nav-item
						a(class='nav-link', href='/deposit') Deposit
					li.nav-item
						a(class='nav-link', href='/withdraw') Withdraw
					li.nav-item
						a(class='nav-link', href='/transfer') Transfer
				ul(class='navbar-nav ml-auto')
					if user
						li.nav-item
							span(class='navbar-text mr-3 text-secondary-1-base') Address: 
								code(class='text-primary-lighter') #{user.address}
							span(class='navbar-text mr-1 text-secondary-1-base') Balance: 
								code(class='text-primary-lighter') #{numeral(user.balance).format('$0,0[.]00')}
					li.nav-item
						a(class='nav-link', href='/support') Support
					if !user
						li(class='dropdown nav-item')
							a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Sign In
							div(class='dropdown-menu', aria-labelledby="navbarDropdown")
								a(href='/signin', class='dropdown-item') Sign In
								a(href='/signup', class='dropdown-item') Sign Up
					else
						if user.canAccessKeystone
							li.nav-item
								a(class='nav-link', href='/keystone/') Admin
						li.nav-item
							a(class='nav-link', href='/signout') Sign Out
	br
