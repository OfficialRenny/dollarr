mixin form-signin(args)
	.auth-box.modal-pane-signin(class=args.modal && args.initial != 'signin' ? 'hidden' : null)
		if args.modal
			.modal-header
				button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
				h4.modal-title Sign into Dollarr
		div(class=args.modal ? 'modal-body' : null)
			form(method='post', action='/signin', role='signin', novalidate).auth-form
				input(type='hidden', name='action', value='signin')
				input(type='hidden', name='target', value=!args.modal ? form.target : page.path)
				.form-groups
					.my-1.form-group
						label(for='signin-email').sr-only Username
						input(type='email', name='email', placeholder='Username', id='signin-email', value=locals.form ? locals.form.email : null).form-control.form-control--first
					.my-1.form-group
						label(for='signin-password').sr-only Password
						input(type='password', name='password', placeholder='Password', id='signin-password', value='').form-control.form-control--last
				button(type='submit').btn.btn-block.btn-secondary-1-base.btn-submit Sign in
			.row.text-muted.mt-3
				.col-sm-8 Don't have an account? 
					a(href=args.modal ? js : '/signup', rel=args.modal ? 'modal-pane' : null, data-modal-pane=args.modal ? 'signup' : null) Join Dollarr
